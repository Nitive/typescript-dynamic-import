{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ],
    "moduleResolution": "node",
    "module": "es2015",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "filesGlob": [
    "./src/**/*.ts*"
  ]
}
